# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.php]
indent_size = 4

[*.{yaml,yml}]
indent_size = 2

[*.{neon,neon.dist}]
indent_size = 4

[*.{xml,xml.dist}]
indent_size = 4

[composer.{json,lock}]
indent_size = 4
